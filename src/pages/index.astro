---
import Header from "../components/Header.astro";
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Blog " />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/blue_swirl.avif" />
        <meta name="generator" content={Astro.generator} />
        <title>DRS</title>
    </head>
    <body>
        <Header />
        <main id="main-content">
            <div id="about">
                <p>Hello, I'm Daniel.</p>
                <p>
                    I'm a writer, researcher, and data specialist living in
                    Ashland, OR. I write poetry and nonfiction, program
                    simulations and digital synthesizers, and my research
                    interests are in applied mathematics and the theoretical
                    sciences.
                </p>
            </div>

            <div id="projects">
                <h1>Projects</h1>
                <div><a>Rust & Ruin</a></div>
                <div><a>DIY Graduate School</a></div>
                <div><a>Vocoder</a></div>
                <div><a>Plasmid</a></div>
                <div><a></a></div>
            </div> 

            <div id="research">
                <h1>Interests</h1>
                <div><a>Mathematics</a></div>
                <div><a>Formal Theories</a></div>
                <div><a>Philosophy</a></div>
                <div><a>Anthropology</a></div>
                <div><a>Poetry</a></div>
                <div><a>TTRPGs</a></div>
            </div>

            <div id="books">
                <h1>Books</h1>
                    <a
                        href="https://www.moon-base-books.com/product-pages/tensegrity"
                        >Tensegrity</a
                    >
            </div>

            <div id="blog">
                <hr />
                <h1>Blog</h1>
                <a href="/posts/DIYphd-1"
                    >Building a Graduate Curriculum for Self-Study</a
                >
            </div>
        </main>

        <style>
            #main-content {
                width: clamp(400px, 80%, 800px);
                display: grid;
                grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr;
                grid-template-rows: auto;
            }

            #about {
                grid-column: 1 / 7;
            }

            #projects {
                grid-column: 1 / 3;
            }

            #research {
                grid-column: 3 / 5;
            }

            #books {
                grid-column: 5 / 7;
            }

            #blog {
                padding-top: 25px;
                grid-column: 1 / 7;
            }
        </style>
    </body>
</html>
